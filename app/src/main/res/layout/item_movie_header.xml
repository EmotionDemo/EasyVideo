<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv_live_movie_more"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/tv_movie_title"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_movie"
        />
    <TextView
        android:id="@+id/tv_movie_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="高分电影"
        android:maxLines="1"
        android:layout_toRightOf="@+id/tv_movie_title"
        android:textColor="@color/theme_color_primary_dark"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="更多"
            android:textColor="@color/theme_color_primary_dark" />
        <ImageView
            android:id="@+id/tv_dangqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_rightarrow"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_more"
            />
    </RelativeLayout>

</RelativeLayout>